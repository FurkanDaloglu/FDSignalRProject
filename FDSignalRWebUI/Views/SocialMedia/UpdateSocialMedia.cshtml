@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Güncellenecek Sosyal Medya Hesabı</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                        </div>
                        <input type="hidden" asp-for="SocialMediaID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Icon">İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Url">Link Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="Url">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
                <br />
                <div>
                    <a asp-action="Index" class="btn btn-info">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
