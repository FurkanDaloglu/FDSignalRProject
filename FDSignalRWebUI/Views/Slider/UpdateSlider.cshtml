@model UpdateSliderDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Güncellenecek Öne Çıkan Alan</div>
                        </div>
                        <input type="hidden" asp-for="SliderID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">1. Başlık</label>
                                <input type="text" class="form-control" asp-for="Title1" id="Title1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">2. Başlık</label>
                                <input type="text" class="form-control" asp-for="Title2" id="Title2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">3. Başlık</label>
                                <input type="text" class="form-control" asp-for="Title3" id="Title3">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">1. Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description1" id="Description1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">2. Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description2" id="Description2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">3. Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description3" id="Description3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
                <br />
                <div>
                    <a asp-action="Index" class="btn btn-info">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
